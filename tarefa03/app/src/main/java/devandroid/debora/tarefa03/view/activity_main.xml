<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D1EB"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="125dp"
        android:layout_height="74dp"
        android:backgroundTint="#F321D0"
        android:text="@string/imagem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button4"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:backgroundTint="#F321D0"
        android:text="@string/excluir1"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="396dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="176dp"
        android:layout_height="40dp"
        android:backgroundTint="#F321D0"
        android:text="@string/categorizar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="484dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="175dp"
        android:layout_height="41dp"
        android:backgroundTint="#F321D0"
        android:text="@string/salvar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="661dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="125dp"
        android:layout_height="74dp"
        android:layout_marginStart="76dp"
        android:backgroundTint="#F321D0"
        android:text="@string/definir_lembrete"
        app:layout_constraintStart_toEndOf="@+id/button7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="553dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:backgroundTint="#F321D0"
        android:text="@string/editar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="396dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="241dp"
        android:layout_height="61dp"
        android:layout_marginBottom="64dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Titulo"
        android:textAlignment="viewStart"
        android:textColor="#9C27B0"
        android:textColorHint="#7E3FB5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293"
        tools:ignore="LabelFor,MissingConstraints"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="245dp"
        android:layout_height="63dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Anotaçoes"
        android:textAlignment="gravity"
        android:textColor="#9C27B0"
        android:textColorHighlight="#9C27B0"
        android:textColorHint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431"
        tools:ignore="LabelFor,MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="183dp"
        android:layout_height="58dp"
        android:text="Gerenciamento de anotaçoes"
        android:textAlignment="center"
        android:textColor="#B027A2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="114dp" />

</androidx.constraintlayout.widget.ConstraintLayout>